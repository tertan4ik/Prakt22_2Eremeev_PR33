<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search_books"
    android:background="@color/blue"

    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">

        <CheckBox
            android:id="@+id/genreid"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Поиск по жанру"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/searchbook"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="Поиск" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/biruz"
            android:text="Поиск"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.928" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="708dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="723dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="369dp"
            tools:layout_editor_absoluteY="54dp" />

    </LinearLayout>

    <Button
        android:layout_width="201dp"
        android:layout_height="83dp"
        android:background="@drawable/button1"
        android:text="В библиотеку"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="792dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>